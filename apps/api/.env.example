# Server
PORT=3001
HOST=0.0.0.0
# Comma-separated list of allowed origins (empty means allow all in dev)
CORS_ORIGIN=http://localhost:5173

# Secrets (server-side only)
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_FAPI_BASE_URL=https://fapi.binance.com
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
OPENAI_MAX_COMPLETION_TOKENS=800

# Second LLM provider (Phase 2+)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=800

# Trading / analysis defaults (MVP)
MAX_LEVERAGE=3
TARGET_ROI_PCT=10
RISK_PER_TRADE_PCT=1
DEFAULT_KLINE_INTERVAL=1h
KLINE_LIMIT=200

# Setup scanner (Phase 3)
WATCHLIST_SYMBOLS=BTCUSDC,XRPUSDC,SOLUSDC,ZECUSDC,ETHUSDC,BNBUSDC,BCHUSDC,SUIUSDC,TONUSDC,DOGEUSDC
SCANNER_ENABLED=true
SCANNER_RUN_ON_START=false
SCANNER_INTERVAL_MINUTES=60
SCANNER_TIMEFRAMES=15m,1h
SCANNER_TREND_TIMEFRAME=4h

# Telegram notifications (Phase 4)
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alerts (Phase 4)
ALERTS_ENABLED=true
ALERTS_INTERVAL_SECONDS=30
ALERT_DEDUPE_WINDOW_MINUTES=30
ALERTS_MAX=1000

# Thresholds (percent distance)
ALERT_LIQUIDATION_DISTANCE_PCT=5
ALERT_STOP_DISTANCE_PCT=0.5
ALERT_TP_DISTANCE_PCT=0.6
ALERT_ENTRY_DISTANCE_PCT=0.2

# Setup alerts
ALERT_TOP_SETUPS_ENABLED=true
ALERT_SETUPS_ENTRY_ENABLED=true
ALERT_TOP_SETUPS_COUNT=3

#target returns
TARGET_RETURN_EQUITY_PCT=10        # Minimum target: 10% of wallet equity
STRETCH_RETURN_EQUITY_PCT=20,30    # Stretch targets: 20%, 30% equity returns