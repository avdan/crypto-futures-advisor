{
  "name": "binance-advisor",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:all": "node scripts/dev-all.mjs",
    "dev:api": "npm -w apps/api run dev",
    "dev:web": "npm -w apps/web run dev",
    "build": "npm --workspaces run build --if-present",
    "typecheck": "npm --workspaces run typecheck --if-present"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
